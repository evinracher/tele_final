                </div>
            </div>
        </div>

        <div class="col-md-5">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Products</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < surveys.length; ++i) { %>
                    <tr>
                        <td><%= surveys[i].name %></td>
                        <td>
                            <ul>
                            <% for(var j = 0; j < surveys[i].products.length; ++j) { %>
                                <li>
                                    <%= surveys[i].products[j] %>
                                </li>
                            <% } %>
                            </ul>
                        </td>
                        <td><%= surveys[i].text  %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include partials/_footer %>